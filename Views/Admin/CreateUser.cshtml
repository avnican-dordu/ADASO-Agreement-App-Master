@model ADASO_AgreementApp.Models.Entity.Adminn
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post" style="margin-left:15px;">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Ad</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @style = "color:blue" })
                </div>

                <div class="form-group">
                    <label>Soyad</label>
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @style = "color:blue" })
                </div>

                <div class="form-group">
                    <label>Telefon</label>
                    @Html.TextBoxFor(m => m.Tel, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Tel, "", new { @style = "color:blue" })
                </div>

                <div class="form-group">
                    <label>Şifre</label>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password", required = "required" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:blue"})
                </div>
                <div style="margin-top: 10px;">
                    <button id="btn" class="btn btn-info">Kullanıcı Ekle</button>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>E-Mail</label>
                    @Html.TextBoxFor(m => m.Mail, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Mail, "", new { @style = "color:blue" })
                </div>

                <div class="form-group">
                    <label>TC</label>
                    @Html.TextBoxFor(m => m.TC, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.TC, "", new { @style = "color:blue" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Role, "Pozisyon") 
                    <select class="form-control" id="Role" name="Role">
                        <option value="Admin" @(Model?.Role == "Admin" ? "selected" : "")>Admin</option>
                        <option value="Kullanıcı" @(Model?.Role == "Kullanıcı" ? "selected" : "")>Kullanıcı</option>
                    </select>
                    @Html.ValidationMessageFor(m => m.Role, "", new { @style = "color:blue" }) 
                </div>
            </div>
        </div>
    </div>
</form>

