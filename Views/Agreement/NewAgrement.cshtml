@model ADASO_AgreementApp.Models.Entity.Agreementt
@{
    ViewBag.Title = "NewAgrement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post" style="margin-left:15px;">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Sözleşme Adı</label>
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @style = "color:blue" })
                </div>

                <div class="form-group">
                    <label>Başlangıç Tarihi</label>
                    @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", required = "required" })
                    @Html.ValidationMessageFor(m => m.StartDate, "", new { @style = "color:blue" })
                </div>

                <div class="form-group">
                    <label>Şirket</label>
                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.CompanyName, "", new { @style = "color:blue" })
                </div>

                <div class="form-group">
                    <label>E-Mail</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:blue" })
                </div>
                <div style="margin-top: 10px;">
                    <button id="btn" class="btn btn-info">Sözleşme Ekle</button>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>Sözleşme İçeriği</label>
                    @Html.TextBoxFor(m => m.Content, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Content, "", new { @style = "color:blue" })
                </div>

                <div class="form-group">
                    <label>Bitiş Tarihi</label>
                    @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", required = "required" })
                    @Html.ValidationMessageFor(m => m.EndDate, "", new { @style = "color:blue" })
                </div>

                <div class="form-group">
                    <label>Dosya Yükle</label>
                    <input type="file" name="File" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>
